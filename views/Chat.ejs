<!DOCTYPE html>
<html lang="ru" dir="ltr">

<head>
  <meta charset="UTF-8">
  <title>Fakimaku</title>
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
    integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous">
  <link rel="stylesheet" href="css/chat.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" href="https://m4r5ha11.com/assets/icon.png">
  <link rel="manifest" href="/manifest.json">
</head>

<body class="chat">
  <noscript>
    <style>
      .chat_sidebar,
      .char_main,
      .chat_footer {
        display: none;
      }

      #offline::before {
        content: 'Включите JavaScript в своём браузере.';
      }
    </style>
  </noscript>

  <div id="offline"></div>
  <div class="chat_sidebar">
    <h3>Люди</h3>
    <div id="users"></div>
  </div>
  <div class="char_main">
    <ol id="messages"></ol>
    <div class="chat_footer">
      <form id="message-form" action="/chat" method="GET">
        <input type="text" name="message" placeholder="Сообщение" autofocus="off" autocomplete="off" autocorrect="off"
          spellcheck="off" maxlength="600">
        <button type="submit" id="sendMessage">
          <i class="fas fa-paper-plane fa-2x" style="margin-right: 3px; padding: 4px;"></i>
        </button>
      </form>
      <button id="sendGeolacation" type="button" style="font-weight: 700;"><i class="fas fa-map-marker-alt"
          style="padding: 8px; font-size: 28px;"></i></button>
    </div>
  </div>

  <script id="message-template" type="text/template">
    <div id="msgs">
    <li class="message">
      <div class="title">
        <h3 class="from">{{from}}</h3>
        <span class="time">{{time}}</span>
      </div>
      <div class="text">
        <span>{{text}}</span>
      </div>
    </li>
  </div>
  </script>

  <script id="link-template" type="text/template">
    <div id="msgs">
    <li class="message">
      <div class="title">
        <h3 class="from">{{from}}</h3>
        <span class="time">{{time}}</span>
      </div>
      <div class="text">
        <span>{{{text}}}</span>
      </div>
    </li>
  </div>
  </script>

  <script id="location-message-template" type="text/template">
    <li class="message">
      <div class="title">
        <h3 class="from">{{from}}</h3>
        <span class="time">{{time}}</span>
      </div>
      <div class="text">
        <span><a href="{{url}}" target="_blank">Моё текущее местоположение</a></span>
      </div>
    </li>
  </script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.4.0/socket.io.js"></script>
  <script type="text/javascript" src="js/mustache.js"></script>
  <script type="text/javascript" src="js/moment.js"></script>
  <script type="text/javascript" src="js/chat.js"></script>
</body>

</html>